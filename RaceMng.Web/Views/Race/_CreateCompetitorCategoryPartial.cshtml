@using RaceMng.Models.VM
@model CompetitorCategoryVM

@{
}

<div class="modal fade" data-bs-keyboard="false" data-bs-backdrop="static">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Účastník závodu</h4>
        <button type="button" class="close" data-toggle="hide-modal">×</button>
      </div>
      <div class="modal-body">
        <form asp-action="SaveCompetitorCategory" method="post" class="form-horizontal">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <input asp-for="FormMode" type="hidden" />
          <input asp-for="CategoryId" type="hidden" />
          <input asp-for="CompetitorId" type="hidden" />
          <div class="row mb-2">
            <label asp-for="Competitor.FirstName" class="control-label text-end col-md-2"></label>
            <div class="col-md-10">
              <input asp-for="Competitor.FirstName" class="form-control" />
              <span asp-validation-for="Competitor.FirstName" class="text-danger"></span>
            </div>
          </div>
          <div class="row mb-2">
            <label asp-for="Competitor.LastName" class="control-label text-end col-md-2"></label>
            <div class="col-md-10">
              <input asp-for="Competitor.LastName" class="form-control" />
              <span asp-validation-for="Competitor.LastName" class="text-danger"></span>
            </div>
          </div>
          <div class="row mb-2">
            <label asp-for="Number" class="control-label text-end col-md-2"></label>
            <div class="col-md-10">
              <input asp-for="Number" class="form-control" type="number" />
              <span asp-validation-for="Number" class="text-danger"></span>
            </div>
          </div>
          <div class="row mb-2">
            <label asp-for="Competitor.BirthYear" class="control-label text-end col-md-2"></label>
            <div class="col-md-10">
              <input asp-for="Competitor.BirthYear" class="form-control" type="number" />
              <span asp-validation-for="Competitor.BirthYear" class="text-danger"></span>
            </div>
          </div>
          <div class="row mb-2">
            <label asp-for="Competitor.Team" class="control-label text-end col-md-2"></label>
            <div class="col-md-10">
            <input asp-for="Competitor.Team" class="form-control" />
            <span asp-validation-for="Competitor.Team" class="text-danger"></span>
            </div>
          </div>
          <div class="row mb-2">
            <label asp-for="Competitor.SexId" class="control-label text-end col-md-2"></label>
            <div class="col-md-10">
            <select asp-for="Competitor.SexId" asp-items="@ViewBag.Sex" class="form-control">
              <option value="">-- Vyberte --</option>
            </select>
            <span asp-validation-for="Competitor.SexId" class="text-danger"></span>
            </div>
          </div>
          <div class="row mb-2">
            <label asp-for="TimeString" class="control-label text-end col-md-2" title="Format hh:mm:ss.fffffff"></label>
            <div class="col-md-10">
              <input asp-for="TimeString" class="form-control" placeholder="00:00:00" />
              <span asp-validation-for="TimeString" class="text-danger"></span>
            </div>
          </div>

        </form>
      </div>
      <div class="modal-footer">
        @*   <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>*@
        <button type="button" class="btn btn-primary" data-toggle="save-modal" data-actname="">Uložit</button>

      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(function () {
      //console.log("jQuery works - _CreateCompetitorCategoryPartial.cshtml");

      $("#Competitor_FirstName").setupAutocomplete('/Race/AutocompleteFirstName');

      $("#Competitor_LastName").setupAutocomplete('/Race/AutocompleteLastName');

      $("#Competitor_Team").setupAutocomplete('/Race/AutocompleteTeam');

      //focus on first textbox
      setTimeout(function () {
          $('#Competitor_FirstName').focus();
      }, 500);


  });

</script>