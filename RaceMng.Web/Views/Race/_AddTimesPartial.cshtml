@using RaceMng.Models.VM
@model FormAddTimesVM

@{
}

<div class="modal fade" data-bs-keyboard="false" data-bs-backdrop="static">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Vložit výsledné časy</h4>
        <button type="button" class="close" data-toggle="hide-modal">×</button>
      </div>
      <div class="modal-body">
        <form asp-action="SaveTimes" method="post" class="form-horizontal">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="row mb-2">
            <label asp-for="Times" class="control-label text-end col-md-2"></label>
            <div class="col-md-10">
              <textarea asp-for="Times" type="text" class="form-control" rows="5" placeholder="101-00:31:24&#10;102-00:42:56&#10;103-00:37:49"></textarea>
              <span asp-validation-for="Times" class="text-danger"></span>
            </div>
          </div>

        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-toggle="save-modal" data-actname="">Uložit</button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">

  $(function () {
      //focus on first textbox
      setTimeout(function () {
          $('#Times').focus();
      }, 500);
  });

</script>